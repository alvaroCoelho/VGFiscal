<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_padrao"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >




        <TextView
            android:id="@+id/tvQuadra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="INFORMAÇÕES SOBRE A EDIFICAÇÃO"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >



            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano Construção"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etAnoConstrucao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="13" 
				android:inputType="number">

                <requestFocus />

            </EditText>

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número Pavimentos Edificação"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <EditText
                android:id="@+id/etNumeroPavimentosEdificacao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" 
				android:inputType="number">
            </EditText>
		</TableRow>
		
			<TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Área Construída da Unidade"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <EditText
                android:id="@+id/etAreaConstUnidade1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" 
				android:inputType="numberDecimal">
            </EditText>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spTipo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alinhamento"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spAlinhamento1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locação"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spLocacao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Situação"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spSituacao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estrutura"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spEstrutura1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cobertura"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spCobertura1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paredes"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spParedes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >



            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vedações/Esquadrias"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spVedacoesEsquadrias1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revestimento Externo"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spRevExterno1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Padrão da Construção"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spPadraoConstrucao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
		<TableRow
            android:id="@+id/tableRow15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocupação do Lote"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />


            <Spinner
                android:id="@+id/spOcupacaoLote1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
        
		<TableRow
            android:id="@+id/tableRow16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alvará de Construção"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />
                
				        <EditText
				            android:id="@+id/etAlvaraConstrucao1"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:ems="10" 
				            android:inputType="text">
					    </EditText>

        </TableRow>

		<TableRow
		    android:id="@+id/tableRow17"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >

		    <TextView
		        android:id="@+id/textView17"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Apartamento"
		        android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="#000000" />
                
            <EditText
                android:id="@+id/etApartamento1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:inputType="text">
          </EditText>
		</TableRow>
        
		<TableRow
            android:id="@+id/tableRow18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bloco"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />
                
				        <EditText
				            android:id="@+id/etBloco1"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:ems="10" 
				            android:inputType="text">
					    </EditText>

        </TableRow>


		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

			<Button
			    android:id="@+id/btnGuardar"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:text="Adicionar" />

			<Button
			    android:id="@+id/btnCancelarEdificacao"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:text="Cancelar" />

			<Button
			    android:id="@+id/btnExcluirEdificacao"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:text="Apagar Edificação"
			    style="@style/ButtonText"
			    android:background="@drawable/red_menu_btn"
		        android:textColor="#FFFFFF" />

		</LinearLayout>
    </TableLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>