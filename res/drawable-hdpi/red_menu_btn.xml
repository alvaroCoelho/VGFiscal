<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="#D10000"/>
            <stroke 
                android:width="1dip"
                android:color="#992f2f"	/>
            <corners 
                android:radius="3dip"/>
            <padding 
                android:left="40dip"
                android:right="40dip"/>
           
        </shape>
    </item>
	<item>
	    <shape>
	        <gradient 
	            android:startColor="#D10000"
	            android:endColor="#992f2f"
	            android:angle="270"/>
	        <stroke 
                android:width="0.5dip"
                android:color="#992f2f"/>
	        <corners 
                android:radius="3dip"/>
            <padding 
                android:left="40dip"
                android:right="40dip"/>
	    </shape>
	</item>
</selector>